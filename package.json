{
    "name": "ant-design-testing",
    "version": "1.1.0",
    "description": "Easier testing for ant-design-based UI library",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/cjs/index.d.ts",
    "scripts": {
        "dev": "father dev",
        "build": "father build && npm run generate",
        "build:deps": "father prebundle",
        "prepublishOnly": "father doctor && npm run build",
        "generate": "node scripts/generate.js",
        "test": "jest",
        "lint": "eslint src/**",
        "lint:fix": "prettier --write src/** && eslint --fix src/**",
        "release": "standard-version",
        "publish": "npm run publish",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DTStack/ant-design-testing"
    },
    "keywords": [
        "Ant Design",
        "UI library",
        "Jest",
        "Unit Test",
        "React Testing Library"
    ],
    "authors": [
        "mortalYoung <yangwei1@outlook.com>",
        "JackWang032 <w2522134117@outlook.com>"
    ],
    "license": "MIT",
    "files": [
        "dist",
        "compiled"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "peerDependencies": {
        "@testing-library/react": "*",
        "antd": "5",
        "dayjs": "*",
        "rc-resize-observer": "*"
    },
    "devDependencies": {
        "@swc/core": "^1.3.58",
        "@swc/jest": "^0.2.26",
        "@testing-library/react": "^13.0.0",
        "@types/jest": "^29.5.1",
        "antd": "5",
        "dayjs": "^1.11.8",
        "bumpp": "^9.1.0",
        "standard-version": "^9.5.0",
        "eslint-plugin-jsdoc": "^46.8.2",
        "father": "^4.3.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "ko-lint-config": "^2.2.20",
        "lint-staged": "^13.2.2",
        "moment": "^2.29.4",
        "prettier": "^2.8.8",
        "rc-resize-observer": "*",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ts-morph": "^19.0.0",
        "typescript": "^4.8.0"
    },
    "lint-staged": {
        "*.{ts,js,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
